<PrimeiroScreen>:
	StackLayout:
		orientation: 'tb-lr'
		GridLayout:
			cols: 2
			size_hint: (.5,.5)
			Label:
				text: "[b]Que dia é hoje?[/b]"
				markup: True
				font_size: '20dp'
				id: lb1
				
			Button:
				text: "Promoção do dia!"
				bond: True
				on_press: root.dia()

